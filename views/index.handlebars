<div class="container">
  <div class="ctn">
        <img class="center-block" src="assets/img/burgers.png" alt="burger" width="400">
  </div>
    
  <h1 class="text-center">Eat-Da-Burger!</h1>
    
<div class="row">
  <div class="col-lg-4">
    <ol>
      {{#each burgers}}
      {{#unless this.devour}}
        <li>
          {{this.name}}
            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devour" value="true">
              <button type="submit" class="btn btn-success">Devour it!</button>
            </form>
          </li>
        {{/unless}}
      {{/each}}
    </ol>
</div>

<div class="col-lg-4">
<ol>
  {{#each burgers}}
    {{#if this.devour}}
      <li>
        {{this.name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value="false">
        </form>
      </li>
    {{/if}}
  {{/each}}
</ol>
</div>

<div class="container text-center">
  <div class = "row">
    <div class="col-lg-4 text-center">
      <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
          <textarea class="form-control" type="text" id="bu" name="name"></textarea>
        </div>
          <button type="submit" class="btn btn-primary">Submit your burger!</button>
          <p>Enter a burger you want to eat!</p>
      </form>
    </div>
    </div>
  </div>
</div>